
.carousel-layer
	display: grid
	grid-template-rows: 1fr auto
	grid-template-columns: auto 1fr auto
	ul
		list-style: none
		padding: 0px
		margin: 0px
		display: flex
		grid-area: 1/2/2/3
		place-self: stretch
		& + ul
			grid-area: 2/2/3/3
		.create
			display: flex
			align-items: center
			justify-content: center
			cursor: pointer
			opacity: .75
			color: var(--extra-color, ButtonFace)
			transition: opacity .3s
			&:hover
				opacity: .9
			&:before
				content: '\2BB6'
				font-size: 2rem
				line-height: 1.5rem
		li
			position: relative
			align-self: stretch
			& > del
				position: absolute
				top: 0px
				right: 0px
				opacity: .75
				transition: opacity .3s
				&:hover
					opacity: 1

				&:before
					content: '\2297'
