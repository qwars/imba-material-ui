
.authentication
	display: flex
	flex-direction: column
	gap: 1rem
	width: 25rem
	button
		height: 2rem
		align-items: center
		justify-content: center
	a
		cursor: pointer
	h2
		dfn
			display: flex
			gap: 1ex
			justify-content: flex-end
	section
		display: flex
		flex-direction: column
		gap: 1rem

	label input[type="password"], label input[type="text"]
		padding: 0px 1rem 0px 0px
		& ~ i
			cursor: pointer
			justify-self: flex-end
			transform: translateX(1em)

	label input[type="password"] ~ i:before
				content: '◉'
	label input[type="text"] ~ i:before
				content: '◎'
