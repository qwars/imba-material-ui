/* Styl for widget */

.colors-collection
	display: inline-flex
	flex-direction: column
	gap: 1rem
	font: normal normal 300 normal 16px / normal -apple-system, "Segoe UI", system-ui, Roboto, "Noto Sans", "Helvetica Neue", sans-serfi
	.color-hue
		z-index: 2
		margin: 0px -1rem
		circle
			r: .35rem
	summary:after
		display: none !important
	rect
		x: 0%
		y: 0%
		width: 100%
		height: 100%

	& > svg:first-child
		width: 0px
		height: 0px
		position: fixed
		top: -1000px
		left: -1000px
	ul
		margin: 0px
		padding: 0px
		list-style: none
		display: flex
		flex-wrap: wrap
		gap: 1ex
		&:empty
			display: none
		li
			width: 2rem
			height: 2rem
			box-sizing: border-box
			border: 1px solid rgba( 0, 0, 0, .15 )
			border-radius: .2rem
			background-clip: border-box
			display: flex
			align-items: center
			justify-content: center
			cursor: pointer
			position: relative
			&.is-alpha
				background-image: linear-gradient( 45deg, rgba( 0,0,0,0.2 ) 25%, transparent 25%, transparent 74%, rgba( 0,0,0,0.2 ) 75%, rgba( 0,0,0,0.2 )), linear-gradient( 45deg,rgba( 0,0,0,0.2 ) 25%, transparent 25%, transparent 74%, rgba( 0,0,0,0.2 ) 75%, rgba( 0,0,0,0.2 ) )
				background-size: .7rem .7rem;
				background-position: 0 0, .35rem .35rem;

			summary svg, & > svg
				width: 1.5rem
				height: 1.5rem
				fill: ButtonFace
				pointer-events: none
			&:hover summary svg, &:hover > svg
				fill: GrayText
			&.active:before
				content: ""
				width: .5rem
				height: .5rem
				border-radius: 50%
				background: white
				opacity: .85
				transition: opacity .3s
			&:not( .active ):hover del
				opacity: .5

			del
				position: absolute
				right: -.5rem
				top: -.5rem
				background: white
				opacity: 0
				border-radius: 50%
				width: 1rem
				height: 1rem
				display: flex
				align-items: center
				justify-content: center
				border: 1px solid var( --border-color, ButtonFace )
				&:hover
					opacity: 1
					transition: opacity .3
				svg
					width: .5rem
					height: .5rem
					transform: rotate(45deg)
			&.active del
				display: none
	.ColorEditor
		display: grid
		grid-template-rows: 1fr auto
		grid-template-columns: 1fr auto
		gap: 1rem
		& > section:first-child
			background: white
		svg
			overflow: visible
			cursor: pointer
			position: relative
			z-index: 1
		circle
			stroke: GrayText
			stroke-width: 1px
			fill: white
			r: .35rem
			cursor: pointer
		& > section
			border: 1px solid var( --border-color, ButtonFace )
			border-radius: .3rem
			box-sizing: border-box
			display: flex

		.ColorAlpha
			width: 3rem
			height: 18rem
			circle
				cx: 50%
		.ColorSaturationValue
			width: 18rem
			height: 18rem
			.ColorHueBlack stop
				stop-color: black
		.ColorInputs
			grid-area: 2/1/3/3
			display: flex
			align-items: stretch
			justify-content: space-between
			gap: 1ex
			height: 2rem
			border: none
			& > u
				cursor: pointer
			u, i
				text-decoration: none
				font-style: normal
				display: flex
				align-items: center
				justify-content: flex-end
				position: relative
				z-index: 1
				min-width: 1em
				color: GrayText
			label
				display: flex
				align-items: stretch
				transform: translateX( -.2em )
				i
					margin-right: -1em
				u
					margin-left: -1.2em
				input
					background: transparent
					border: 1px solid var( --border-color, ButtonFace )
					text-align: right
					padding: 0px 1em
					font: normal normal 300 normal 16px / normal -apple-system, "Segoe UI", system-ui, Roboto, "Noto Sans", "Helvetica Neue", sans-serfi
					width: 0px
					flex-grow: 1
					width: 4.5rem
					box-sizing: border-box
					&::-webkit-outer-spin-button,
					&::-webkit-inner-spin-button
						-webkit-appearance: none
						margin: 0px

	.ColorGrayEditor
		display: grid
		grid-template-rows: auto auto
		grid-template-columns: 1fr auto
		gap: 1rem
		div
			position: relative
		div:first-child
			background: linear-gradient( 90deg, black, white )

		svg
			width: 17.35rem
			height: 2rem
			overflow: visible
			cursor: pointer
			position: relative
			z-index: 1
		circle
			stroke: GrayText
			stroke-width: 1px
			fill: white
			r: 5px
		.ColorGray circle, .ColorGrayAlpha circle
			cy: 50%
		div
			display: flex
			align-items: center
			justify-content: center
			border: 1px solid GrayText
			border-radius: .3rem
			box-sizing: border-box
		u, i
			text-decoration: none
			font-style: normal
			display: flex
			align-items: center
			justify-content: flex-end
			position: relative
			z-index: 1
			min-width: 1em
			color: GrayText
		label
			display: flex
			align-items: stretch
			transform: translateX( -.2em )
			i
				margin-right: -.9em
			u
				margin-left: -1.2em
			input
				background: transparent
				border: 1px solid GrayText
				text-align: right
				padding: 0px 1em
				font: normal normal 300 normal 16px / normal -apple-system, "Segoe UI", system-ui, Roboto, "Noto Sans", "Helvetica Neue", sans-serfi
				width: 0px
				flex-grow: 1
				min-width: 4rem
				border-radius: .3rem
				box-sizing: border-box
				&::-webkit-outer-spin-button,
				&::-webkit-inner-spin-button
					-webkit-appearance: none
					margin: 0px

.chess
	position: relative
	&:before
		content: ""
		top: 0px
		right: 0px
		bottom: 0px
		left: 0px
		margin: auto
		z-index: 0
		position: absolute
		background-color: white
		background-image: linear-gradient( 45deg, rgba( 0,0,0,0.2 ) 25%, transparent 25%, transparent 75%, rgba( 0,0,0,0.2 ) 75%, rgba( 0,0,0,0.2 )), linear-gradient( 45deg,rgba( 0,0,0,0.2 ) 25%, transparent 25%, transparent 75%, rgba( 0,0,0,0.2 ) 75%, rgba( 0,0,0,0.2 ) )
		background-size: 1rem 1rem;
		background-position: 0 0, .5rem .5rem;
