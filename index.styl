
.pagination-firebase
	display: grid
	grid-template-columns: auto 1fr auto
	gap: 1rem
	align-items: center
	min-width: 6rem
	.loading
		grid-area: 1/2/2/3
		place-self: center
	span
		display: inline-flex
		cursor: pointer
		&:first-child, &:last-child
			opacity: 0
		&:first-child:before
			content: '\25C0'
		&:last-child:before
			content: '\25B6'
	span.active
		opacity: .5
		transition: opacity .3s
		&:hover
			opacity: .75